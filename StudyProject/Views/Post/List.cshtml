@model IEnumerable<Post>
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head></head>
<body>
    <h2>All posts</h2>
    @{ 
        foreach(var post in Model)
        {
        <div>
            <h3>@post.title</h3>
            <h3>@post.author</h3>
        </div>
        }
    }
</body>
</html>